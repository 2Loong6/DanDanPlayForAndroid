<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.6"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/main_home"
            style="@style/FooterStyle"
            android:drawableTop="@drawable/ic_home_light"
            android:text="公告与番组" />

        <TextView
            android:id="@+id/main_play"
            style="@style/FooterStyle"
            android:drawableTop="@drawable/ic_folder_light"
            android:text="媒体库" />

        <TextView
            android:id="@+id/main_personal"
            style="@style/FooterStyle"
            android:drawableTop="@drawable/ic_account_box_light"
            android:text="我的" />

    </LinearLayout>

</LinearLayout>