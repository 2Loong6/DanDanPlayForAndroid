<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/bg_corner_5"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="添加Tracker"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:textColor="@color/gray_color3"
        android:text="旧任务需暂停后tracker才会对其生效"/>

    <EditText
        android:id="@+id/tracker_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:selectAllOnFocus="true"
        android:hint="tracker链接"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_rl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_dialog_item_left"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/gray_color3"
            android:text="取消"/>
        <TextView
            android:id="@+id/confirm_rl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_dialog_item_left"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/theme_color"
            android:text="确定"/>
    </LinearLayout>

</LinearLayout>