<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fullscreen_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_item_background"
            android:padding="10dp"
            android:src="@mipmap/ic_return_back"/>

        <com.player.ijkplayer.widgets.MarqueeTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/pb_battery"
            style="@style/ProgressBarBattery"
            android:layout_marginRight="10dp"
            android:max="100"/>

        <TextView
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_item_background"
            android:padding="10dp"
            android:src="@mipmap/ic_video_screenshot"/>

        <TextView
            android:id="@+id/player_settings_tv"
            android:layout_width="@dimen/settings_btn_width"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/sel_item_background"
            android:text="设置"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/window_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_item_background"
            android:padding="10dp"
            android:src="@mipmap/ic_return_back"/>
    </FrameLayout>

    <!--设置-->
    <LinearLayout
        android:id="@+id/player_setting_ll"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/proportion_setting_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="比例"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#70ffffff"/>

        <TextView
            android:id="@+id/danmu_setting_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="弹幕"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#70ffffff"/>

        <TextView
            android:id="@+id/subtitle_setting_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="字幕"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#70ffffff"/>

        <TextView
            android:id="@+id/speed_setting_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="倍速"/>

    </LinearLayout>

    <!--比例设置-->
    <RadioGroup
        android:id="@+id/aspect_ratio_group"
        android:layout_width="@dimen/settings_btn_width"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:checkedButton="@id/aspect_fit_parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/aspect_fit_parent"
            style="@style/AspectRatioButton"
            android:background="@drawable/sel_btn_ar_adjust_screen"/>

        <RadioButton
            android:id="@+id/aspect_fit_screen"
            style="@style/AspectRatioButton"
            android:background="@drawable/sel_btn_ar_adjust_video"/>

        <RadioButton
            android:id="@+id/aspect_16_and_9"
            style="@style/AspectRatioButton"
            android:background="@drawable/sel_btn_ar_16_9"/>

        <RadioButton
            android:id="@+id/aspect_4_and_3"
            style="@style/AspectRatioButton"
            android:background="@drawable/sel_btn_ar_4_3"/>
    </RadioGroup>

    <!--弹幕设置-->
    <LinearLayout
        android:id="@+id/danmu_setting_ll"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_marginTop="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="文字比例"/>

            <TextView
                android:id="@+id/danmu_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="50%"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/danmu_size_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="速度大小"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/speed_fast_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="快"/>
            <TextView
                android:id="@+id/speed_middle_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="中"/>
            <TextView
                android:id="@+id/speed_slow_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="慢"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="弹幕屏蔽"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/mobile_danmu_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_mobile_unselect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="滚动"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/bottom_danmu_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_bottom_unselect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="底部"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/top_danmu_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_top_unselect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="顶部"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/more_block_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="屏蔽管理"/>
        </RelativeLayout>

    </LinearLayout>

    <!--字幕--><!--H：180-->
    <LinearLayout
        android:id="@+id/subtitle_setting_ll"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_marginTop="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="字幕状态"/>

            <Switch
                android:id="@+id/subtitle_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/subtitle_ctrl_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="显示控制"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="中文大小"/>

         <TextView
                android:id="@+id/subtitle_chinese_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="50%"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/subtitle_chinese_size_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="英文大小"/>

            <TextView
                android:id="@+id/subtitle_english_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="50%"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/subtitle_english_size_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!--字幕显示控制--><!--H：96-->
    <LinearLayout
        android:id="@+id/subtitle_display_setting_ll"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/only_chinese_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="仅中文"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#70ffffff"/>

        <TextView
            android:id="@+id/only_english_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="仅英语"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#70ffffff"/>

        <TextView
            android:id="@+id/both_language_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="双语显示"/>
    </LinearLayout>

    <!--倍速设置--><!--H：160-->
    <LinearLayout
        android:id="@+id/speed_setting_ll"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speed50_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="0.5"/>

        <TextView
            android:id="@+id/speed75_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="0.75"/>

        <TextView
            android:id="@+id/speed100_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="1.0"/>

        <TextView
            android:id="@+id/speed125_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="1.25"/>

        <TextView
            android:id="@+id/speed150_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/sel_item_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="1.5"/>
    </LinearLayout>

</merge>